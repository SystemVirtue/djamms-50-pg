# AppWrite Configuration
VITE_APPWRITE_ENDPOINT=https://appwrite.yourdomain.com/v1
VITE_APPWRITE_PROJECT_ID=your_project_id
VITE_APPWRITE_DATABASE_ID=djamms_production
VITE_APPWRITE_API_KEY=your_admin_key

# AppWrite Functions (IMPORTANT: Use function IDs, NOT URLs)
# ✅ Good: VITE_APPWRITE_FUNCTION_MAGIC_LINK=68e5a317003c42c8bb6a
# ❌ Bad:  VITE_APPWRITE_FUNCTION_MAGIC_LINK=https://cloud.appwrite.io/v1/functions/...
VITE_APPWRITE_FUNCTION_MAGIC_LINK=your_magic_link_function_id
VITE_APPWRITE_FUNCTION_PLAYER_REGISTRY=your_player_registry_function_id
VITE_APPWRITE_FUNCTION_PROCESS_REQUEST=your_process_request_function_id

# Authentication
VITE_APPWRITE_MAGIC_REDIRECT=https://auth.djamms.app/callback
VITE_JWT_SECRET=your_jwt_secret_change_this_in_production
VITE_ALLOW_AUTO_CREATE_USERS=false

# YouTube API
VITE_YOUTUBE_API_KEY=your_youtube_api_key

# Features
VITE_ENABLE_STRIPE_PAYMENTS=false
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Non-VITE for scripts/CI (mirror the above)
APPWRITE_ENDPOINT=https://appwrite.yourdomain.com/v1
APPWRITE_PROJECT_ID=your_project_id
APPWRITE_DATABASE_ID=djamms_production
APPWRITE_API_KEY=your_admin_key
JWT_SECRET=your_jwt_secret_change_this_in_production
