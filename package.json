{
  "name": "djamms-prototype",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n \"landing,auth,player,admin,kiosk\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold,bgYellow.bold,bgCyan.bold\" \"npm run dev:landing\" \"npm run dev:auth\" \"npm run dev:player\" \"npm run dev:admin\" \"npm run dev:kiosk\"",
    "dev:player": "vite --config apps/player/vite.config.ts --port 3001",
    "dev:auth": "vite --config apps/auth/vite.config.ts --port 3002",
    "dev:admin": "vite --config apps/admin/vite.config.ts --port 3003",
    "dev:kiosk": "vite --config apps/kiosk/vite.config.ts --port 3004",
    "dev:landing": "vite --config apps/landing/vite.config.ts --port 3000",
    "dev:dashboard": "vite --config apps/dashboard/vite.config.ts --port 3005",
    "build": "npm run build:player && npm run build:auth && npm run build:admin && npm run build:kiosk && npm run build:landing && npm run build:dashboard",
    "build:player": "vite build --config apps/player/vite.config.ts",
    "build:auth": "vite build --config apps/auth/vite.config.ts",
    "build:admin": "vite build --config apps/admin/vite.config.ts",
    "build:kiosk": "vite build --config apps/kiosk/vite.config.ts",
    "build:landing": "vite build --config apps/landing/vite.config.ts",
    "build:dashboard": "vite build --config apps/dashboard/vite.config.ts",
    "preview": "vite preview --config apps/player/vite.config.ts",
    "test:unit": "vitest run",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "schema:check": "node scripts/schema-manager/appwrite-schema.cjs",
    "schema:apply": "node scripts/schema-manager/appwrite-schema.cjs --apply",
    "schema:clean": "node scripts/schema-manager/appwrite-schema.cjs --apply --clean --confirm",
    "create-collections": "node scripts/schema-manager/appwrite-schema.cjs --create-collections --apply --confirm",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "appwrite": "^11.0.0",
    "jsonwebtoken": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "react-youtube": "^10.1.0",
    "sonner": "^1.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@types/youtube": "^0.1.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "node-appwrite": "^20.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
